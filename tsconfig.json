{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015", "dom", "es2016.array.include"],
    "sourceMap": true,
    "moduleResolution": "node",
    "jsx": "react",
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules"]
}
